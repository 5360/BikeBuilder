@page
@using ProductsAPI.Data.Enum
@model BikeBuilder.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />

<div class="container justify-content-center">
    <form class="col-lg-6 m-auto" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-1">
            <label asp-for="Product.ProductType" class="col-2"></label>
                <select asp-for="Product.ProductType" asp-items="Html.GetEnumSelectList<ProductType>()" class="form-control col-9">
                    <option>Select type</option>
                </select>
                <span asp-validation-for="Product.ProductType" class="text-danger"></span>
        </div>

        <div class="row mb-1">
            <label asp-for="Product.Name" class="col-2"></label>
            <input asp-for="Product.Name" class="form-control col-9" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="row mb-1">
            <label asp-for="Product.Price" class="col-2"></label>
            <input type="number" min="0.00" max="10000.00" step="0.01" asp-for="Product.Price" class="form-control col-9" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="rpw mb-1">
            <label asp-for="Product.Quantity" class="col-2"></label>
            <input type="number" min="0" step="1" asp-for="Product.Quantity" class="form-control col-9" />
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>

        <div class="row mb-1">
            <label asp-for="Product.Picture" class="col-2"></label>
            <input type="file" accept="image/*" asp-for="Image" required class="form-control col-9" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="row mb-1">
            <label asp-for="Product.AssetBundle" class="col-2"></label>
            <input asp-for="AssetBundlde" required class="form-control col-9" />
            <span asp-validation-for="AssetBundlde" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }