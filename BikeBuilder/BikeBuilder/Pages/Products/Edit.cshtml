@page
@using ProductsAPI.Data.Enum
@model BikeBuilder.Pages.Products.EditModel

@{
    ViewData["Title"] = "Create";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.PublicId" />
            <div class="form-group">
                <label asp-for="Product.ProductType" class="control-label"></label>
                <select asp-for="Product.ProductType" asp-items="Html.GetEnumSelectList<ProductType>()"></select>
                <span asp-validation-for="Product.ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input type="number" min="0.00" max="10000.00" step="0.01" asp-for="Product.Price" asp-format="{0:#,###.00}" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Picture" class="control-label"></label>
                <input asp-for="Product.Picture" class="form-control" />
                <span asp-validation-for="Product.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.AssetBundle" class="control-label"></label>
                <input asp-for="Product.AssetBundle" class="form-control" />
                <span asp-validation-for="Product.AssetBundle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }