@page
@model BikeBuilder.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<h1>Manage Parts</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].AssetBundle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Price)
                </td>
                <td>
                    <img src="~/uploads/Images/@product.Picture" />
                </td>
                <td>
                    <a href="~/uploads/Assets/@product.AssetBundle">@product.AssetBundle</a>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@product.PublicId">Edit</a> |
                    <a asp-page-handler="delete" asp-route-id="@product.PublicId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>